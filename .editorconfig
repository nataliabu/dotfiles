[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.diff]
trim_trailing_whitespace = false

[*.py]
indent_style = space

[*.rb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.go]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2
